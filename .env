# Environment Configuration
NODE_ENV=development

# Database Configuration for Local Development
# Using SQLite for local development to avoid conflicts with production
DB_DIALECT=sqlite
DB_STORAGE=./nobean_local.db

# Alternative: If you want to use MySQL locally, uncomment these and comment SQLite config above
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_NAME=nobean_local
# DB_USER=root
# DB_PASSWORD=your_local_password

# JWT Configuration
JWT_SECRET=your_local_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=8888

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8888,http://localhost:3000

# Session Configuration
SESSION_SECRET=your_local_session_secret_here

# Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=100mb
